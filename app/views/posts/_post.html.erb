<head>
<%= stylesheet_link_tag "post.css" %>
</head>
<link href='https://unpkg.com/css.gg@2.0.0/icons/css/check.css' rel='stylesheet'>
<body>
<div class="main">
<div class= "sidebar">
    <ul> 
    <%if current_user%>
    <li> <%= link_to current_user.name.capitalize, dashboard_path, id:"user-name"%></li>
    <%end%>
    <li><a href="#" class="active"> 
    <!---<span class= "icon">  <%= image_tag("dashboards.png", class:"dashboard", alt:"Dashboard")%> </span>---->
    <span class= "item"><%= link_to "Dashboard", dashboard_path %></span> </a></li>

    <li><a href="#">
    <!---<span class= "icon">  <%= image_tag("sign_out.png", class:"signout", alt:"open_door")%> </span>---->
    <span class= "item"> <%= link_to "Sign out", destroy_user_session_path, data: {turbo_method: :delete} %></span></a></li>
    </ul>

</div>

  <div id="<%= dom_id post %>" class="content">
    <h1 class= "tittleh1">
    <%= post.title %></h1>
    <% if post.id == 3 %>
    <%= image_tag "dingdong.jpg" %>
    <% end %>
    <p>  <%=simple_format(post.body)%> </p>
    <%if @lesson.is_completed == true %>
    <i class="gg-check"></i>
    <%= button_to "Lesson Completed", toggle_complete_path, method: :put, id:"complete_button"%>
    <% else %>
    <%= button_to "Mark Complete", toggle_complete_path, method: :put, id:"complete_button"%>
    <% end %>
  </div>
</div>
</body>
<%= javascript_import_module_tag "script" %>
